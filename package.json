{
	"name": "budgetsaurus",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"start": "npm run dev",
		"dev": "pollen && vite dev",
		"build": "pollen && vite build",
		"start:wrangler": "wrangler pages dev .svelte-kit/cloudflare --live-reload",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "eslint .",
		"wrangler": "wrangler",
		"drizzle-kit": "drizzle-kit",
		"gen-migrate": "NODE_ENV=development drizzle-kit generate",
		"dev-migrate": "NODE_ENV=development drizzle-kit migrate",
		"prod-migrate": "NODE_ENV=production drizzle-kit migrate",
		"dev-seed": "NODE_ENV=development tsx ./drizzle/dev.seed.ts",
		"tsx": "tsx"
	},
	"dependencies": {
		"@faker-js/faker": "^9.2.0",
		"@fontsource/fira-sans": "^5.1.0",
		"@fontsource/ubuntu-mono": "^5.1.0",
		"@libsql/client": "^0.14.0",
		"@tsndr/cloudflare-worker-jwt": "^3.1.3",
		"bcrypt-ts": "^5.0.2",
		"chart.js": "^4.4.6",
		"date-fns": "^4.1.0",
		"drizzle-orm": "^0.36.1",
		"pollen-css": "^5.0.1",
		"postcss-preset-env": "^10.0.9",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"redaxios": "^0.5.1",
		"vite-plugin-node-polyfills": "^0.22.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@sveltejs/adapter-cloudflare": "^4.7.4",
		"@sveltejs/kit": "^2.7.7",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/bcryptjs": "^2.4.6",
		"@types/eslint": "^9.6.1",
		"@zerodevx/svelte-toast": "^0.9.6",
		"dotenv": "^16.4.5",
		"drizzle-kit": "^0.28.0",
		"eslint": "^9.14.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.12.0",
		"svelte": "^5.1.11",
		"svelte-check": "^4.0.5",
		"tsx": "^4.19.2",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.13.0",
		"vite": "^5.4.10",
		"vitest": "^2.1.4",
		"wrangler": "^3.85.0"
	},
	"browser": {
		"fs": false
	},
	"volta": {
		"node": "20.17.0",
		"npm": "10.8.2"
	}
}
